<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sergiodealmeidabrunacci.pizza_italy.ClientActivity">

    // Labels
    <TextView android:id="@+id/clientName"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"/>
    <TextView android:id="@+id/clientAddress"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientName"
        android:text="Address:"/>
    <TextView android:id="@+id/clientZipCode"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientAddress"
        android:text="Zip Code:"/>
    <TextView android:id="@+id/clientPhone"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientZipCode"
        android:text="Phone:"/>
    <TextView android:id="@+id/clientCard"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientPhone"
        android:text="Card Number:"/>
    <TextView android:id="@+id/clientCardExpiryDate"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientCard"
        android:text="Card's Expire Date:"/>

    // Input Text
    <EditText android:id="@+id/clientNameIn"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/clientCardExpiryDate"
        android:layout_toRightOf="@id/clientCardExpiryDate"
        android:layout_alignBaseline="@id/clientName" />
    <EditText android:id="@+id/clientAddressIn"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientNameIn"
        android:layout_toEndOf="@id/clientCardExpiryDate"
        android:layout_toRightOf="@id/clientCardExpiryDate"
        android:layout_alignBaseline="@id/clientAddress"/>
    <EditText android:id="@+id/clientZipIn"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientAddressIn"
        android:layout_toEndOf="@id/clientCardExpiryDate"
        android:layout_toRightOf="@id/clientCardExpiryDate"
        android:layout_alignBaseline="@id/clientZipCode" />
    <EditText android:id="@+id/clientPhoneIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text"
        android:layout_below="@id/clientZipIn"
        android:layout_toEndOf="@id/clientCardExpiryDate"
        android:layout_toRightOf="@id/clientCardExpiryDate"
        android:layout_alignBaseline="@id/clientPhone"
        android:inputType="phone"
        android:digits="0123456789+" />
    <EditText android:id="@+id/clientCardIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text"
        android:layout_below="@id/clientPhoneIn"
        android:layout_toEndOf="@id/clientCardExpiryDate"
        android:layout_toRightOf="@id/clientCardExpiryDate"
        android:layout_alignBaseline="@id/clientCard"
        android:inputType="number"
        android:digits="0123456789" />
    <EditText android:id="@+id/clientCardExpiryDateIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text"
        android:layout_below="@id/clientPhoneIn"
        android:layout_toEndOf="@id/clientCardExpiryDate"
        android:layout_toRightOf="@id/clientCardExpiryDate"
        android:layout_alignBaseline="@id/clientCardExpiryDate"
        android:inputType="date" />

    <Button android:id="@+id/demandButton"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/clientCardExpiryDate"
        android:text="Demand" />
</RelativeLayout>

