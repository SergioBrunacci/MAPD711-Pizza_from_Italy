<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sergiodealmeidabrunacci.pizza_italy.SizeActivity">

    <TextView
        android:id="@+id/szQuestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Choose the pizza's size:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup android:id="@+id/rdSzGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/szQuestText">
        <RadioButton
            android:id="@+id/rdSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small" />

        <RadioButton
            android:id="@+id/rdMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/rdLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large" />

        <RadioButton
            android:id="@+id/rdXlarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-Large" />
    </RadioGroup>
</RelativeLayout>
